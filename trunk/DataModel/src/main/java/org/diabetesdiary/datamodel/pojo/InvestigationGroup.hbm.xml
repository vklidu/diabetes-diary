<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class table="investigation_group" name="org.diabetesdiary.datamodel.pojo.InvestigationGroup">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="name" not-null="true" />
        <bag table="investigation" inverse="true" cascade="all" name="investigations" order-by="name">
            <key column="idGroup"/>
            <one-to-many class="org.diabetesdiary.datamodel.pojo.Investigation"/>
        </bag>
    </class>
</hibernate-mapping>
