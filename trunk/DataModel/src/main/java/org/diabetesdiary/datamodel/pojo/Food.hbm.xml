<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="food" name="org.diabetesdiary.datamodel.pojo.Food">
    <id name="idFood">
      <generator class="native"/>
    </id>
    <many-to-one name="foodGroup" column="id_food_group" not-null="true" lazy="false"/>
    <property name="name" not-null="true"/>
    <property name="energy" not-null="true"/>
    <property name="protein" not-null="true"/>
    <property name="fat" not-null="true"/>
    <property name="sugar" not-null="true"/>
    <property name="cholesterol"/>
    <property name="roughage"/>
    <set lazy="false" inverse="true" cascade="all" name="units">
      <key on-delete="cascade" column="id_food"/>
      <one-to-many class="org.diabetesdiary.datamodel.pojo.FoodUnit"/>
    </set>       
    
  </class>
</hibernate-mapping>
