<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class table="patient" name="org.diabetesdiary.datamodel.pojo.Patient">
        <id column="id_patient" name="idPatient">
            <generator class="assigned"/>
        </id>
        <property name="name" />
        <property name="surname" />
        <property name="male" />
        <property name="born" />
        <property name="sufferFrom"/>
        <property name="email"/>
        <property name="address"/>
        <property name="phone"/>
        <property name="pumpUsage" />
        <property name="perSensitivity" />
        <property name="hepSensitivity" />
        <property name="filtrationRate" />
        <property name="renalThreshold" />
        <many-to-one name="basalInsulin" column="id_insulin_basal" not-null="true" lazy="false"/>
        <many-to-one name="bolusInsulin" column="id_insulin_bolus" not-null="true" lazy="false"/>
    </class>
</hibernate-mapping>
