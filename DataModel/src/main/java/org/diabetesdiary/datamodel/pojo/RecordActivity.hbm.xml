<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="record_activity" name="org.diabetesdiary.datamodel.pojo.RecordActivity">
    <composite-id class="org.diabetesdiary.datamodel.pojo.RecordActivityPK" name="id">
      <key-property name="idActivity"/>
      <key-property name="idPatient"/>
      <key-property name="date"/>
    </composite-id>
    <property name="duration" not-null="true" />
    <property name="notice" />
    <many-to-one not-null="true" column="idActivity" name="activity" insert="false" update="false" lazy="false" />
  </class>
</hibernate-mapping>